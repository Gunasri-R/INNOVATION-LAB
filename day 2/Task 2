

// 1. for loop – Print numbers from 1 to 5
console.log("For loop: Numbers 1 to 5");
for (let i = 1; i <= 5; i++) {
  console.log(i);
}

// 2. while loop – Print numbers from 1 to 5
console.log("While loop: Numbers 1 to 5");
let j = 1;
while (j <= 5) {
  console.log(j);
  j++;
}

// 3. do...while loop – Ask user until they type "yes"
let input;
do {
  input = prompt("Type 'yes' to stop:");
} while (input !== "yes");

console.log("You typed 'yes'. Loop ended.");
